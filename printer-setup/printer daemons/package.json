{
  "name": "printer-daemon",
  "version": "1.0.0",
  "description": "Silent print service for POS/Invoices",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "npx pkg . --targets node18-win-x64 --output PrintDaemon.exe"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "bin/SumatraPDF.exe"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "pdf-to-printer": "^5.6.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
